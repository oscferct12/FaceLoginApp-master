<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FaceLoginApp.Paginas.EgresosIngresos">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label Text="Ingresos Mensuales: " TextColor="Black" FontSize="Large"/>
            <Entry x:Name="txtIngresos" TextColor="Black" Text="{Binding Nombre}" 
                       Placeholder="Ingreso Mensual" 
                        BackgroundColor="White" FontSize="Medium"/>
            <Label Text="Otros Ingresos: " TextColor="Black" FontSize="Large"/>
            <Entry x:Name="txtOtrosIngresos" TextColor="Black" Text="{Binding Cedula}" 
                       Placeholder="Otros Ingresos" 
                        BackgroundColor="White" FontSize="Medium"/>
            <Label Text="Egresos: " TextColor="Black" FontSize="Large"/>
            <Entry x:Name="txtEgresos" TextColor="Black" Text="{Binding Direccion}" 
                       Placeholder="Egresos" 
                        BackgroundColor="White" FontSize="Medium"/>
            <Label Text="Otros Egresos: " TextColor="Black" FontSize="Large"/>
            <Entry x:Name="txtOtrosEgresos" TextColor="Black" Text="{Binding Telefono}" 
                       Placeholder="Otros Egresos" 
                        BackgroundColor="White" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>